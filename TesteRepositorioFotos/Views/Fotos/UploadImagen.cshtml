<h2>UploadImagen</h2>

<div class="row">
    @using (Html.BeginForm("UploadImagen", "Fotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Salvar Foto para seu album
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="file" name="file" />
                        <br />
                        <input type="submit" class="btn-warning form-control" value="Salvar" />
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>
